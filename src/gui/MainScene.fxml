<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="277.0" prefWidth="297.0" stylesheets="@connectCss.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainScaneController">
   <center>
      <AnchorPane prefHeight="274.0" prefWidth="296.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtfieldserveip" layoutX="76.0" layoutY="169.0">
               <font>
                  <Font name="Calibri" size="12.0" />
               </font></TextField>
            <Label fx:id="txtServerIP" layoutX="89.0" layoutY="135.0" text="Enter Server IP" textAlignment="CENTER" textOverrun="CLIP">
               <font>
                  <Font name="Calibri Bold" size="20.0" />
               </font></Label>
            <Button fx:id="btnConnect" layoutX="109.0" layoutY="206.0" mnemonicParsing="false" onAction="#ShowLogIn" style="-fx-background-color: green;" text="connect" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="18.0" />
               </font></Button>
            <Label fx:id="txtError" layoutX="-1.0" layoutY="249.0" prefHeight="18.0" prefWidth="297.0" textAlignment="CENTER" textFill="RED" textOverrun="CLIP" visible="false">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </Label>
            <Button fx:id="Xbt" layoutX="271.0" layoutY="2.0" mnemonicParsing="false" onAction="#disconnectClient" text="X" textFill="#fff2f2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
